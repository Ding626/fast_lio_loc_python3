{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch fastlio_mapping (gdb)",
      "type": "cppdbg",
      "request": "launch",
      // Program binary: default points to the install location. If you build in-place, update this path.
      "program": "${workspaceFolder}/../../install/fast_lio_localization/lib/fast_lio_localization/fastlio_mapping",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "ROS_DOMAIN_ID", "value": "0" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // Optional: run the build task before launching. You can remove this if you prefer to build manually.
    //   "preLaunchTask": "colcon: build fast_lio_localization"
    },

    {
      "name": "Attach to fastlio_mapping (pick process)",
      "type": "cppdbg",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "cwd": "${workspaceFolder}"
    }
  ]
}
